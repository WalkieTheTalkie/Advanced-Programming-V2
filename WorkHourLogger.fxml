<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: aaffaa;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.WorkHourController">
   <top>
      <Label text="Log Working Hours" BorderPane.alignment="CENTER">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
   </top>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: aaeeff;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="submit" layoutX="356.0" layoutY="177.0" mnemonicParsing="false" text="Submit" />
            <TextField fx:id="text" layoutX="127.0" layoutY="177.0" promptText="Enter hours:" />
            <Button fx:id="Cancel" layoutX="356.0" layoutY="234.0" mnemonicParsing="false" text="Cancel" />
            <RadioButton fx:id="Add" layoutX="99.0" layoutY="91.0" mnemonicParsing="false" text="Add">
               <toggleGroup>
                  <ToggleGroup fx:id="Choices" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="Subtract" layoutX="259.0" layoutY="91.0" mnemonicParsing="false" text="Subtract" toggleGroup="$Choices" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
